<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="ImiÄ™"
        android:textColorHint="@color/colorText"
        android:theme="@style/Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            style="@style/editTextStyle"/>


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_surname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwisko"
        android:textColorHint="@color/colorText"
        android:theme="@style/Text"
        android:layout_below="@+id/input_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/surnameEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            style="@style/editTextStyle"/>

    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_surname"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center"
        android:id="@+id/radioGroup"
        android:layout_marginTop="30dp">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/male"
            android:id="@+id/maleRadioButton"
            style="@style/titleTextBig"
            android:textColor="@color/colorText"
            android:checked="true"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/female"
            android:id="@+id/femaleRadioButton"
            style="@style/titleTextBig"
            android:textColor="@color/colorText" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp">

        <Spinner
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/yearSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/monthSpinner"
            android:layout_toRightOf="@+id/yearSpinner"
            android:layout_toEndOf="@+id/yearSpinner"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <Spinner
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/daySpinner"
            android:layout_toRightOf="@+id/monthSpinner"
            android:layout_toEndOf="@+id/monthSpinner"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:background="#2a2a2a"
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:text="@string/save_button"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:background="@color/colorCard"
            android:layout_marginRight="1dp"/>

    </LinearLayout>

</RelativeLayout>