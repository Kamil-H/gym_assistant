<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_description_short"
            android:id="@+id/textView29"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/titleTextSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/descriptionTextView"
            android:layout_below="@+id/textView29"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_training_days"
            android:layout_marginTop="10dp"
            android:id="@+id/textView34"
            android:layout_below="@+id/descriptionTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/titleTextSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/numOfTrainingDaysTextView"
            android:layout_below="@+id/textView34"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorText"
            android:id="@+id/view"
            android:layout_below="@+id/numOfTrainingDaysTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activate"
            android:id="@+id/activateButton"
            android:textColor="@color/colorText"
            style="?android:attr/borderlessButtonStyle"
            android:drawableRight="@drawable/ic_done_white_24dp"
            android:layout_alignTop="@+id/view"
            android:layout_toLeftOf="@+id/editButton"
            android:layout_toStartOf="@+id/editButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:id="@+id/editButton"
            android:textColor="@color/colorText"
            style="?android:attr/borderlessButtonStyle"
            android:drawableRight="@drawable/ic_mode_edit_white_24dp"
            android:layout_below="@+id/view"
            android:layout_toLeftOf="@+id/deleteButton"
            android:layout_toStartOf="@+id/deleteButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:id="@+id/deleteButton"
            android:textColor="@color/colorText"
            style="?android:attr/borderlessButtonStyle"
            android:drawableRight="@drawable/ic_delete_white_24dp"
            android:layout_below="@+id/view"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>