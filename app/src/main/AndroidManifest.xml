<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gymassistant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.ExercisesPreview" />
        <activity android:name=".Activities.RegisterActivity" />
        <activity
            android:name=".UIComponents.YouTubeDialog"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WizardActivity"
            android:label="@string/title_activity_wizard"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.ChooseExercises" />
        <activity android:name=".Activities.TrainingAssistant"></activity>
    </application>

</manifest>